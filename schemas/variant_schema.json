{
    "$defs": {
        "Color": {
            "description": "String or list of strings representing hex color codes.",
            "pattern": "^#?[a-fA-F0-9]{6}$",
            "title": "Color",
            "type": "string"
        },
        "ColorStandards": {
            "description": "Standard color system identifiers.",
            "properties": {
                "ral": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/LimitedString"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "ncs": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/LimitedString"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "pantone": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/LimitedString"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "bs": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/LimitedString"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "munsell": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/LimitedString"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                }
            },
            "title": "ColorStandards",
            "type": "object"
        },
        "Colors": {
            "anyOf": [
                {
                    "$ref": "#/$defs/Color"
                },
                {
                    "items": {
                        "$ref": "#/$defs/Color"
                    },
                    "type": "array"
                }
            ],
            "description": "Either a single hex color code string or a list of such strings.",
            "title": "Colors"
        },
        "LimitedString": {
            "description": "String type with a maximum length constraint.",
            "maxLength": 1000,
            "title": "LimitedString",
            "type": "string"
        },
        "Traits": {
            "additionalProperties": false,
            "description": "Physical and environmental traits of the filament.",
            "properties": {
                "translucent": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates that the filament is translucent",
                    "title": "Translucent"
                },
                "glow": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates that the filament glows in the dark",
                    "title": "Glow"
                },
                "matte": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates that the filament has a matte finish",
                    "title": "Matte"
                },
                "recycled": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates that the filament was made of recycled materials",
                    "title": "Recycled"
                },
                "recyclable": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates that the filament can be recycled",
                    "title": "Recyclable"
                },
                "biodegradable": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates if the filament will biodegrade",
                    "title": "Biodegradable"
                }
            },
            "title": "Traits",
            "type": "object"
        }
    },
    "additionalProperties": false,
    "description": "Color variant of a filament.",
    "properties": {
        "color_name": {
            "$ref": "#/$defs/LimitedString",
            "description": "The manufacturer's name for this filament color"
        },
        "color_hex": {
            "$ref": "#/$defs/Colors",
            "description": "The official hex color code for this filament"
        },
        "hex_variants": {
            "anyOf": [
                {
                    "items": {
                        "$ref": "#/$defs/Color"
                    },
                    "type": "array"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "description": "Alternative hex color codes that this filament is known to report or be identified as (e.g., via NFC)",
            "title": "Hex Variants"
        },
        "discontinued": {
            "anyOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "title": "Discontinued"
        },
        "color_standards": {
            "anyOf": [
                {
                    "$ref": "#/$defs/ColorStandards"
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        },
        "traits": {
            "anyOf": [
                {
                    "$ref": "#/$defs/Traits"
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        }
    },
    "required": [
        "color_name",
        "color_hex"
    ],
    "title": "Variant",
    "type": "object"
}
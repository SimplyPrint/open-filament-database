{
    "$defs": {
        "CountryCode": {
            "anyOf": [
                {
                    "maxLength": 2,
                    "minLength": 2,
                    "pattern": "^([A-Z]{2})$",
                    "type": "string"
                },
                {
                    "const": "Unknown",
                    "type": "string"
                }
            ],
            "description": "String type for ISO 3166-1 alpha-2 country codes.",
            "title": "CountryCode"
        },
        "LimitedString": {
            "description": "String type with a maximum length constraint.",
            "maxLength": 1000,
            "title": "LimitedString",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "description": "Store information for purchase links.",
    "properties": {
        "id": {
            "$ref": "#/$defs/LimitedString",
            "description": "The ID for this store"
        },
        "name": {
            "$ref": "#/$defs/LimitedString",
            "description": "The name of this store"
        },
        "storefront_url": {
            "$ref": "#/$defs/LimitedString",
            "description": "A link to the storefront of this store"
        },
        "storefront_affiliate_link": {
            "anyOf": [
                {
                    "$ref": "#/$defs/LimitedString"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "description": "An affiliate link to the storefront of this store"
        },
        "logo": {
            "$ref": "#/$defs/LimitedString",
            "description": "A link to the logo for this store"
        },
        "ships_from": {
            "anyOf": [
                {
                    "items": {
                        "$ref": "#/$defs/CountryCode"
                    },
                    "type": "array"
                },
                {
                    "$ref": "#/$defs/CountryCode"
                }
            ],
            "description": "A list of locations the shop linked ships from",
            "title": "Ships From"
        },
        "ships_to": {
            "anyOf": [
                {
                    "items": {
                        "$ref": "#/$defs/CountryCode"
                    },
                    "type": "array"
                },
                {
                    "$ref": "#/$defs/CountryCode"
                }
            ],
            "description": "A list of locations the shop linked ships to",
            "title": "Ships To"
        }
    },
    "required": [
        "id",
        "name",
        "storefront_url",
        "logo",
        "ships_from",
        "ships_to"
    ],
    "title": "Store",
    "type": "object"
}